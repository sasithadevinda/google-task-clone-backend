<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <resource-env-ref>
        <resource-env-ref-name>jdbc/pool</resource-env-ref-name>
    </resource-env-ref>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>lk.ijse.dep8.tasks.api.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TaskListServlet</servlet-name>
        <servlet-class>lk.ijse.dep8.tasks.api.TaskListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>lk.ijse.dep8.tasks.api.TaskServlet</servlet-class>
    </servlet>
</web-app>